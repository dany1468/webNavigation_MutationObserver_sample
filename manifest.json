{
  "name": "web navigation sample",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "js" :[
        "src/content_script/app.js"
      ],
      "matches": [
        "https://www.yammer.com/*"
      ],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "tabs",
    "webNavigation",
    "https://www.yammer.com/*"
  ]
}
